# ==============================================================================
# Hytale Server Docker - Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git - it contains secrets!
# ==============================================================================

# REQUIRED: Full JSON content from .hytale-downloader-credentials.json
# Run hytale-downloader locally first to obtain this
# Example format (DO NOT use these values - they are placeholders):
HYTALE_CREDENTIALS_JSON={"access_token":"eyJ...your_token_here...","refresh_token":"ory_rt_...your_refresh_token...","expires_at":1768223666,"branch":"release"}

# Optional: Server configuration
SERVER_NAME=Hytale Server - (Dealer Node)
MAX_PLAYERS=10
MEMORY_MB=4096
AUTH_MODE=authenticated
